@model IEnumerable<eventHub.Models.EventViewer>

<h1>Wydarzenia</h1>
<hr />

@if (Model.Any())
{
    foreach (var stat in Model)
    {
        <h3>@stat.Event.Title</h3>
        <p>Description: @stat.Event.Description</p>
        <p>Data rozpoczęcia: @stat.Event.Start</p>
        <p>Lokalizacja: @stat.Event.Location</p>
        <p>Wydarzenie dodał: @stat.Event.User</p>

        @if (User.Identity.IsAuthenticated)
        {
            <form asp-action="Interested" asp-route-eventId="@stat.Event.Id" method="post">
                @Html.AntiForgeryToken()
                <input type="submit" value="Jestem zainteresowany" class="btn btn-success" />
            </form>
        }
        else
        {
            <span>Zaloguj się, aby zaznaczyć zainteresowanie</span>
        }
        <p></p>
        <hr />
    }
}
else
{
    <p>No statistics to be displayed.</p>
}