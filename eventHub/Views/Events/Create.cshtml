@model eventHub.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<h1>Create Event</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="form--compact">
